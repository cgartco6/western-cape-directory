            let productName, price;
            
            if (productType === 'premium') {
                productName = `Premium Listing for ${business.name}`;
                price = 199;
            } else if (productType === 'boost') {
                productName = `Boost for ${business.name}`;
                price = business.tier === 'free' ? 150 : 100;
            } else if (productType === 'enterprise') {
                productName = `Enterprise Listing for ${business.name}`;
                price = 999;
            }
            
            // Add to cart
            cart.push({
                id: Date.now(),
                businessId,
                businessName: business.name,
                productName,
                price,
                type: productType
            });
            
            updateCartUI();
            
            // Show confirmation
            alert(`${productName} added to cart!`);
        }

        // Update cart UI
        function updateCartUI() {
            const cartItems = document.getElementById('cartItems');
            const cartTotal = document.getElementById('cartTotal');
            const cartBadge = document.querySelector('.cart-badge');
            
            if (cart.length === 0) {
                cartItems.innerHTML = '<p class="text-center">Your cart is empty</p>';
                cartTotal.textContent = 'R0.00';
                cartBadge.textContent = '0';
                return;
            }
            
            // Calculate total
            let total = 0;
            cartItems.innerHTML = '';
            
            cart.forEach(item => {
                total += item.price;
                
                const itemElement = document.createElement('div');
                itemElement.className = 'list-group-item';
                itemElement.innerHTML = `
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="my-0">${item.productName}</h6>
                            <small>${item.businessName}</small>
                        </div>
                        <span class="text-muted">R${item.price.toFixed(2)}</span>
                    </div>
                `;
                
                cartItems.appendChild(itemElement);
            });
            
            cartTotal.textContent = `R${total.toFixed(2)}`;
            cartBadge.textContent = cart.length;
        }

        // Chatbot functionality
        let chatbotOpen = false;
        
        function toggleChatbot() {
            const chatbot = document.getElementById('chatbot');
            chatbotOpen = !chatbotOpen;
            
            if (chatbotOpen) {
                chatbot.classList.add('open');
            } else {
                chatbot.classList.remove('open');
            }
        }
        
        function handleChatInput(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        }
        
        function sendMessage() {
            const input = document.getElementById('chatbot-input');
            const message = input.value.trim();
            
            if (message === '') return;
            
            // Add user message
            addMessage(message, 'user');
            input.value = '';
            
            // Simulate AI response (in a real implementation, this would call an API)
            setTimeout(() => {
                let response;
                
                if (message.toLowerCase().includes('pricing') || message.toLowerCase().includes('cost')) {
                    response = "We offer three plans: Free (R0), Premium (R199/month), and Enterprise (R999/month). Which one are you interested in?";
                } else if (message.toLowerCase().includes('list') || message.toLowerCase().includes('add')) {
                    response = "To list your business, click on the 'Add Your Business' button in the navigation menu. I can guide you through the process!";
                } else if (message.toLowerCase().includes('area') || message.toLowerCase().includes('region')) {
                    response = "We cover all areas of the Western Cape: West Coast, Winelands, Cape Metro, Overberg, Garden Route, and Karoo. Which area are you interested in?";
                } else if (message.toLowerCase().includes('help') || message.toLowerCase().includes('support')) {
                    response = "Our support team is available 24/7. You can also email us at support@capebiz.co.za or call 072 142 3215. How can I help you?";
                } else {
                    response = "I'm here to help with any questions about our business directory. You can ask me about pricing, listing your business, or finding businesses in specific areas.";
                }
                
                addMessage(response, 'bot');
            }, 1000);
        }
        
        function addMessage(text, sender) {
            const messagesContainer = document.getElementById('chatbot-messages');
            const messageElement = document.createElement('div');
            messageElement.classList.add('message', sender);
            messageElement.textContent = text;
            
            messagesContainer.appendChild(messageElement);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
    </script>
</body>
</html>
